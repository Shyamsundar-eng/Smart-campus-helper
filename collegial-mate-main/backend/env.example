# Server Configuration
PORT=5000
NODE_ENV=development
FRONTEND_URL=http://localhost:5173

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Google API Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:5000/api/auth/google/callback

# Database Configuration (for future use)
# MONGODB_URI=mongodb://localhost:27017/collegial-mate
# POSTGRES_URI=postgresql://username:password@localhost:5432/collegial-mate

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
CORS_ORIGIN=http://localhost:5173
HELMET_ENABLED=true

# Logging
LOG_LEVEL=debug
LOG_FILE=./logs/app.log

# Google API Quotas (free tier limits)
GOOGLE_DRIVE_QUOTA=15GB
GOOGLE_CALENDAR_QUOTA=unlimited
GOOGLE_SHEETS_QUOTA=unlimited
GOOGLE_LANGUAGE_QUOTA=5000_requests_per_month
